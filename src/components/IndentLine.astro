---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'div'>;

const { class: className, ...props } = Astro.props;
---
<div class={`indent-line ${className || ''}`} {...props}>
    <slot></slot>
</div>

<style lang="scss">
  .indent-line {
    border-left: 1px solid #cccccc;
    margin-top: 8px;
    margin-left: 8px;
    padding-left: 16px;
    position: relative;
    padding-bottom: 8px;

    &::before {
      position: absolute;
      bottom: 0px;
      left: 0px;
      display: block;
      content: " ";
      position: absolute;
      width: 10px;
      height: 10px;
      border-bottom: 1px solid #cccccc;
    }
  }
</style>
