---
import type { HTMLAttributes } from 'astro/types';

type Prop = HTMLAttributes<'a'> & {};

const { class: className, ...props } = Astro.props as Prop;
---
<a class=`link-button ${className || ''}` {...props}>
  <slot></slot>
</a>

<style lang="scss">
  a {
    @apply tw-flex tw-justify-center tw-items-center tw-p-4;
  }
</style>