---
import { getCurrentLangCode } from '../i18n/utils';

interface Props {
	date: Date;
}

const { date } = Astro.props;
const langCode = getCurrentLangCode(Astro.url);
---

<time class="tw-text-black-700" datetime={date.toISOString()}>
	{
		date.toLocaleDateString(langCode, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
