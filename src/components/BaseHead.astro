---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "@/styles/global.css";
import { languageInfos } from "../i18n/ui";
import type { SupportedLanguageCodes } from "@/lib/language";
import { ClientRouter } from "astro:transitions";

interface Props {
  lang?: SupportedLanguageCodes;
  title: string;
  description: string;
  ogImageUrl?: string;
}

const langInfo = Astro.props.lang ? languageInfos[Astro.props.lang] : null;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const {
  title,
  description,
  ogImageUrl = `/og/index/${Astro.props.lang}.png`,
} = Astro.props;
// const multilangUrls = getMultilangUrlInfo(Astro.url);
