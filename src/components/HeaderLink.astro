---
type Props = {
  pathname: string;
};

const path = Astro.url.pathname;
const { pathname } = Astro.props;
const active = path.includes(pathname);
---

<a href={pathname} class:list={['inline no-underline text-black-950, px-2 py-2 text-black-950',  { active: active }]}> <slot />
</a>

<style>
  a.active {
    font-weight: bolder;
  }
</style>
